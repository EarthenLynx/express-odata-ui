<mvc:View controllerName="sap.ui.mgmt.odata.routes.controller.Logs" displayBlock="true" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core">
	<ScrollContainer height="100%" width="100%" vertical="true" focusable="true">
		<Table id="error-log" class="sapUiSizeCompact" inset="false" items="{
			path: 'errorLogs>/'
		}">
			<columns>
				<Column width="4em">
					<Text text="Type" />
				</Column>
				<Column width="14em">
					<Text text="Time" />
				</Column>
				<Column>
					<Text text="Error" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<ObjectIdentifier text="{errorLogs>level}"/>
						<ObjectIdentifier text="{errorLogs>time}"/>
						<ObjectIdentifier text="{errorLogs>message}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</ScrollContainer>

</mvc:View>