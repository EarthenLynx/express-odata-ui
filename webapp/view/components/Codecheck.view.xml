<mvc:View controllerName="sap.ui.mgmt.odata.routes.controller.Codecheck" displayBlock="true" 
	xmlns="sap.m" 
	xmlns:l="sap.ui.layout" 
	xmlns:ce="sap.ui.codeeditor" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core">

	<l:BlockLayout id="BlockLayout" background="Dashboard">
		<l:BlockLayoutRow accentCells="Accent1">
			<l:BlockLayoutCell title="Test an OData URL">
				<Select width="8rem" id="type-input" class="sapUiSmallMarginEnd" forceSelection="false" selectedKey="{activeRoute>/type}" items="{path: 'activeRoute>/typeOptions'}">
					<core:ListItem key="{activeRoute>value}" text="{activeRoute>text}" icon="{activeRoute>icon}" />
				</Select>

				<Input tooltip="URL has to start with either http:// or https://" width="52rem" class="sapUiSmallMarginBegin sapUiSmallMarginEnd" id="url-input" placeholder="Enter Service URL" valueStateText="Value must be a valid URL" value="{
								path : 'activeRoute>/url',
								type : '.customUrlType'
							}"/>

				<Button width="8rem" class="sapUiSmallMarginBegin" id="query-button" type="Default" text="Query" press="handleGetTestRoute" icon="sap-icon://inspection" />

				<ce:CodeEditor id="codeEditor" type='{activeRoute>/type}' value='{activeRoute>/value}' colorTheme="chrome" height="350px" />

			</l:BlockLayoutCell>
		</l:BlockLayoutRow>
	</l:BlockLayout>

</mvc:View>