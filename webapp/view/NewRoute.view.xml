<mvc:View controllerName="sap.ui.mgmt.odata.routes.controller.Home" displayBlock="true" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:ce="sap.ui.codeeditor">
	<Page showNavButton="true" navButtonPress="handleNavToHome" id="new-route-page" title="Create New Route" class="sapUiContentPadding">
		<Image src="./assets/NewRouteHeading.png"
		width="100%"
			decorative="false"/>
		<content>
			<Label text="Name" />
			<Input id="new-route-title-input" placeholder="Enter Service Name" value="{newRoute>/name}"/>

			<Label text="Route URL (has to start with http[s])" />
			<Input tooltip="URL has to start with either http:// or https://" id="new-route-url-input" placeholder="Enter Service URL" valueStateText="Value must be a valid URL" value="{
                path : 'newRoute>/url',
                type : '.customUrlType'
            }"/>

			<Label text="Description" />
			<TextArea width="100%" value="{newRoute>/desc}" id="new-route-desc-input" placeholder="Enter a brief description about the service, its collection, metadata, ..." rows="4" />
			<HBox>
				<VBox class="sapUiMediumMarginEnd">
					<Label text="Gateway service" />
					<Switch customTextOn="Yes" customTextOff="No" state="{newRoute>/sap}">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Switch>
				</VBox>

				<VBox class="sapUiMediumMarginStart sapUiMediumMarginEnd">
					<Label text="Business Partner access" />
					<Switch state="{newRoute>/guest}">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Switch>
				</VBox>

				<VBox class="sapUiMediumMarginStart">
					<Label text="Active Route" />
					<Switch state="{newRoute>/active}">
						<layoutData>
							<FlexItemData growFactor="1" />
						</layoutData>
					</Switch>
				</VBox>
			</HBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button press="handleOpenPopup" text="Create new Route" type="Accept" icon="sap-icon://add" />
			</OverflowToolbar>
		</footer>
	</Page>

</mvc:View>